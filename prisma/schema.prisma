generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
  DELETED
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

enum ListingStatus {
  ACTIVE
  PAUSED
  DISABLED
  SOLD
}

enum ConversationState {
  NEGOTIATING
  ESCROW_PENDING
  ESCROW_ACTIVE
  CLOSED
}

enum MessageType {
  TEXT
  OFFER
  OFFER_ACCEPT
  OFFER_REJECT
  SYSTEM
  ATTACHMENT
}

enum DealState {
  INITIATED
  FUNDED
  DELIVERED
  COMPLETED
  DISPUTED
  REFUNDED
}

enum ReportTarget {
  LISTING
  USER
}

enum AuditAction {
  USER_BANNED
  USER_UNBANNED
  USER_PROMOTED
  USER_DEMOTED
  USER_SOFT_DELETED
  USER_HARD_DELETED
  LISTING_DISABLED
  LISTING_RESTORED
  LISTING_SOFT_DELETED
  LISTING_HARD_DELETED
  DEAL_RESOLVED
  DEAL_DISPUTED
  DEAL_REFUNDED
  REPORT_ACTIONED
  ADMIN_CREATED
  VERIFICATION_REQUESTED
  VERIFICATION_EMAIL_SENT
  ESCROW_ADMIN_JOINED
}
