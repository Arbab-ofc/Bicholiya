generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
  DELETED
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

enum ListingStatus {
  ACTIVE
  PAUSED
  DISABLED
  SOLD
}

enum ConversationState {
  NEGOTIATING
  ESCROW_PENDING
  ESCROW_ACTIVE
  CLOSED
}

enum MessageType {
  TEXT
  OFFER
  OFFER_ACCEPT
  OFFER_REJECT
  SYSTEM
  ATTACHMENT
}
