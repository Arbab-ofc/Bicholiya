generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
  DELETED
}

enum AuthProvider {
  EMAIL
  GOOGLE
}

enum ListingStatus {
  ACTIVE
  PAUSED
  DISABLED
  SOLD
}

enum ConversationState {
  NEGOTIATING
  ESCROW_PENDING
  ESCROW_ACTIVE
  CLOSED
}

enum MessageType {
  TEXT
  OFFER
  OFFER_ACCEPT
  OFFER_REJECT
  SYSTEM
  ATTACHMENT
}

enum DealState {
  INITIATED
  FUNDED
  DELIVERED
  COMPLETED
  DISPUTED
  REFUNDED
}

enum ReportTarget {
  LISTING
  USER
}

enum AuditAction {
  USER_BANNED
  USER_UNBANNED
  USER_PROMOTED
  USER_DEMOTED
  USER_SOFT_DELETED
  USER_HARD_DELETED
  LISTING_DISABLED
  LISTING_RESTORED
  LISTING_SOFT_DELETED
  LISTING_HARD_DELETED
  DEAL_RESOLVED
  DEAL_DISPUTED
  DEAL_REFUNDED
  REPORT_ACTIONED
  ADMIN_CREATED
  VERIFICATION_REQUESTED
  VERIFICATION_EMAIL_SENT
  ESCROW_ADMIN_JOINED
}

model Profile {
  id                    String       @id @default(uuid())
  userId                String       @unique
  email                 String       @unique
  name                  String?
  avatarUrl             String?
  phone                 String?
  role                  Role         @default(USER)
  status                UserStatus   @default(ACTIVE)
  authProvider          AuthProvider @default(EMAIL)
  emailVerified         Boolean      @default(false)
  verificationRequested Boolean      @default(false)
  loyaltyPoints         Int          @default(0)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  deletedAt             DateTime?
  deletedBy             String?
  deleteReason          String?

  listings            Listing[]
  listingLikes        ListingLike[]
  buyerConversations  Conversation[]   @relation("BuyerConversations")
  sellerConversations Conversation[]   @relation("SellerConversations")
  messages            Message[]
  notifications       Notification[]
  stats               UserStats?
  reportsFiledByUser  Report[]         @relation("ReporterReports")
  receivedReports     Report[]         @relation("ReportedUserReports")
  adminVotesGiven     AdminSellerVote[] @relation("AdminVotes")
  adminVotesReceived  AdminSellerVote[] @relation("SellerVotes")
  auditLogsBy         AuditLog[]

  @@map("profiles")
}

model UserStats {
  id                     String   @id @default(uuid())
  profileId              String   @unique
  profile                Profile  @relation(fields: [profileId], references: [id])

  totalDealsAsSeller      Int     @default(0)
  successfulDealsAsSeller Int     @default(0)
  sellerSuccessPercent    Float   @default(0)
  sellerLoyaltyPoints     Int     @default(0)

  totalDealsAsBuyer       Int     @default(0)
  successfulDealsAsBuyer  Int     @default(0)
  buyerSuccessPercent     Float   @default(0)

  updatedAt               DateTime @updatedAt

  @@map("user_stats")
}

model Listing {
  id          String        @id @default(uuid())
  sellerId    String
  seller      Profile       @relation(fields: [sellerId], references: [id])
  title       String
  description String
  category    String
  price       Decimal       @db.Decimal(12, 2)
  imageUrls   String[]      @default([])
  status      ListingStatus @default(ACTIVE)
  viewCount   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  deletedAt    DateTime?
  deletedBy    String?
  deleteReason String?

  likes         ListingLike[]
  conversations Conversation[]
  reports       Report[]

  @@map("listings")
}
